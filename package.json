{
    "name": "project-camp",
    "version": "1.0.0",
    "description": "Project managment application for beginer ",
    "main": "src/index.ts",
    "repository": "origin https://github.com/Shrikant92Bhatt/project-management-base-camp.git",
    "author": "Shrikant Bhatt",
    "license": "MIT",
    "scripts": {
        "tsg": "tsc",
        "dev": "nodemon --exec ts-node src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "lint": "eslint . --ext .ts,.js",
        "lint:fix": "eslint . --ext .ts,.js --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "version:patch": "npm version patch --no-git-tag-version",
        "version:minor": "npm version minor --no-git-tag-version",
        "version:major": "npm version major --no-git-tag-version",
        "pre-commit": "npm run version:patch && git add package.json package-lock.json",
        "commit": "npm run pre-commit && git commit",
        "setup:git-hooks": "bash scripts/setup-git-hooks.sh",
        "setup:husky": "node scripts/setup-husky.js"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^5.1.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.18.2"
    },
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/node": "^24.5.2",
        "dotenv": "^17.2.2",
        "eslint": "^9.36.0",
        "install": "^0.13.0",
        "nodemon": "^3.1.10",
        "npm": "^11.6.1",
        "prettier": "^3.6.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2"
    }
}
